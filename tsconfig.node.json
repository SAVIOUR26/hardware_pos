{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist-electron",
    "baseUrl": ".",
    "paths": {
      "@electron/*": ["./electron/*"]
    }
  },
  "include": ["electron/**/*", "vite.config.ts"]
}
